generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  githubId Int    @unique

  name      String
  login     String
  avatarURL String

  Operation Operation[]
}

model Operation {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId

  type        String
  description String
  dateAt      DateTime
  amount      Int

  user User @relation(fields: [userId], references: [id])
}
